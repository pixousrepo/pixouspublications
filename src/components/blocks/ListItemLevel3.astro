---
const props = Astro.props;
const { node, index, isInline, ...attrs } = props;
console.log(props);

const levelIs = (level) => level === node.level;
---

{
  levelIs(1) ? (
    <li class="flex gap-x-3">
      <svg
        class="mt-1 h-5 w-5 flex-none text-indigo-600"
        viewBox="0 0 20 20"
        fill="currentColor"
        aria-hidden="true"
      >
        <path
          fill-rule="evenodd"
          d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
          clip-rule="evenodd"
        />
      </svg>
      <span>
        <slot />
      </span>
    </li>
  ) : levelIs(2) ? (
    <li class="flex">
      <>
        <svg
          aria-hidden="true"
          viewBox="0 0 32 32"
          class="h-8 w-8 flex-none fill-blue-500"
        >
          <path d="M11.83 15.795a1 1 0 0 0-1.66 1.114l1.66-1.114Zm9.861-4.072a1 1 0 1 0-1.382-1.446l1.382 1.446ZM14.115 21l-.83.557a1 1 0 0 0 1.784-.258L14.115 21Zm.954.3c1.29-4.11 3.539-6.63 6.622-9.577l-1.382-1.446c-3.152 3.013-5.704 5.82-7.148 10.424l1.908.598Zm-4.9-4.391 3.115 4.648 1.661-1.114-3.114-4.648-1.662 1.114Z" />
        </svg>
        <span class="ml-4">
          <slot />
        </span>
      </>
    </li>
  ) : levelIs(3) ? (
    <li class="flex">
      <>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          class="h-8 w-8 flex-none stroke-blue-500 fill-none"
          stroke-width="2"
        >
          <polyline points="9 18 15 12 9 6" />
        </svg>
        <span class="ml-4">
          <slot />
        </span>
      </>
    </li>
  ) : (
    <li>
      <slot />
    </li>
  )
}
