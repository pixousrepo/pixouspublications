---
const props = Astro.props;
const { node, index, isInline, ...attrs } = props;
const levelIs = (level) => level === node.level;
---

{
  levelIs(1) ? (
    <ul class="space-y-2 sm:space-y-4">
      <slot />
    </ul>
  ) : levelIs(2) ? (
    <ul class="pl-10 pt-3 space-y-2 sm:space-y-4 list-decimal list-inside">
      <slot />
    </ul>
  ) : (
    <ul>
      <slot />
    </ul>
  )
}
