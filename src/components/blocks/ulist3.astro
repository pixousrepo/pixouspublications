---
const props = Astro.props;
const { node, index, isInline, ...attrs } = props;
const levelIs = (level) => level === node.level;
---

{
  levelIs(1) ? (
    <ul class="space-y-2 sm:space-y-4">
      <slot />
    </ul>
  ) : levelIs(2) ? (
    <ul role="list" class="mt-8 ml-8 space-y-3">
      <slot />
    </ul>
  ) : levelIs(3) ? (
    <ul role="list" class="mt-8 ml-10 space-y-3">
      <slot />
    </ul>
  ) : (
    <ul>
      <slot />
    </ul>
  )
}
