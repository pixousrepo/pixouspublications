---
import HeroLayout from "./HeroLayout.astro";
import HeroTitle from "./HeroTitle.astro";
import HeroSummary from "./HeroSummary.astro";
import ScopeList from "./ScopeList.astro";
import HeroImage from "./HeroImage.astro";

import { getBlockData } from "../../utilities/sanity-utilities";

const { data } = Astro.props;

function getData(slug) {
  return getBlockData(data, slug);
}
---

<HeroLayout>
  <HeroTitle
    slot="title"
    blockData={getData("journal-of-applied-engineering-and-science-jaes")}
  />
  <HeroSummary slot="summary" blockData={getData("hero-summary")} />
  <ScopeList slot="scope-list" blockData={getData("scope-of-journal")} />
  <HeroImage slot="cover-image" blockData={getData("journal-cover")} />
</HeroLayout>
