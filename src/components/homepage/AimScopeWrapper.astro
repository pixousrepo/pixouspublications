---
import Bold from "../blocks/Bold.astro";
import Heading3 from "../blocks/Heading3.astro";
import MainListItem from "../blocks/MainListItem.astro";
import Ulist1 from "../blocks/ulist1.astro";
import PortableTextBlock from "../peer-review-policy/PortableTextBlock.astro";
import AimScopeContent from "./AimScopeContent.astro";
import SingleSectionLayout from "./SingleSectionLayout.astro";

const { data } = Astro.props;
const components = {
  block: {
    h1: Heading3,
  },
  list: Ulist1,
  listItem: MainListItem,
  mark: {
    strong: Bold,
  },
};
---

<SingleSectionLayout>
  <PortableTextBlock data={data.blocks[0]} components={components} />
</SingleSectionLayout>
