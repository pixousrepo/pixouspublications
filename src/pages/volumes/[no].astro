---
import volumes from "../../data/volumes";
import Layout from "../../layouts/subpage.astro";
import ShowIssues from "../../components/ShowIssues.astro";

export function getStaticPaths() {
  return [{ params: { no: 1 } }];
}

const { no } = Astro.params;
const volume = volumes[no];
---

<Layout title={`Volume ${no} (2023)`}>
  <main>
    <section class="py-8">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <ShowIssues volume={volume} />
      </div>
    </section>
  </main>
</Layout>
